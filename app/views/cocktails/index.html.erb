<div class="home-container text-center">
  <h1 class="main-heading">Tropical Beach BarðŸŒ´</h1>
   <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
   </div>

<div class="home-button">
<%=link_to new_cocktail_path, class: "btn btn-light mt-8" do%>
  Create a Cocktail <i class="fas fa-glass-martini-alt"></i>
<% end %>
</div>

<div class="d-flex justify-content-center flex-wrap">
  <% @cocktails.each do |cocktail| %>
    <%=link_to cocktail_path(cocktail) do%>
    <% if cocktail.photo.present? %>
       <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= cocktail.name %>
      </div>
    <% else%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60')">
        <%= cocktail.name %>
      </div>
    <% end %>
    <% end %>
  <% end %>
 </div>
 </div>
